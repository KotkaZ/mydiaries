<resources>

    <!-- Base application theme. -->
    <style name="DefaultAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkMenu</item>
        <item name="colorPrimaryDark">@color/colorDarkMenu</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="buttonStyle">@style/MenuButton</item>
        <item name="editTextStyle">@style/EditBox</item>

        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <item name="android:datePickerStyle">@style/DatePickerAppearance</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>


    <style name="spinnerItemStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="EditBox" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="ListItemTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListItemText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="MenuButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="TableTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="DatePickerAppearance" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorDarkMenu</item>
    </style>


    <style name="ErrorAppearance">
        <item name="android:textColor">@color/colorError</item>
    </style>

</resources>
